<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_centerHorizontal="true">

    <com.devadvance.circularseekbar.CircularSeekBar
        android:id="@+id/circularAlarmInterrupter"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:clickable="false"
        app:circle_color="@color/colorPrimaryLight"
        app:circle_progress_color="@color/colorPrimary"
        app:circle_stroke_width="3dp"
        app:pointer_halo_width="0dp"
        app:pointer_radius="13dp"
        app:start_angle="120"
        app:end_angle="420"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/instrukcja_wylaczenia_1"
        android:textSize="8pt" />
</RelativeLayout>
