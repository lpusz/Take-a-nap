<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/solve_the_equation_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/solve_the_equation"
        android:textSize="8pt" />

    <TextView
        android:id="@+id/equation_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="15dp"
        android:gravity="center_horizontal"
        android:textSize="11pt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/equation_textView"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/center_equation_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="8pt"
            android:theme="@style/customMaterialButton" />

        <Button
            android:id="@+id/left_equation_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="8pt"
            android:theme="@style/customMaterialButton" />

        <Button
            android:id="@+id/right_equation_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="8pt"
            android:theme="@style/customMaterialButton" />
    </LinearLayout>
</RelativeLayout>